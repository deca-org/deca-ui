{
  "name": "@deca-ui/react",
  "version": "1.5.2",
  "description": "DecaUI is production-ready themable component library built with StitchesJS.",
  "main": "build/main/index.js",
  "types": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/deca-org/deca-ui",
  "homepage": "deca-ui.com",
  "author": "herilsaha",
  "license": "MIT",
  "keywords": [
    "react",
    "javascript",
    "components",
    "design-systems",
    "typescript",
    "a11y",
    "react-components",
    "server-side-rendering",
    "component-library",
    "stitches"
  ],
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && run-p build:*",
    "build:main": "tsc -p config/tsconfig.build.json && tsc-alias -p config/tsconfig.build.json",
    "build:module": "tsc -p config/tsconfig.module.build.json && tsc-alias -p config/tsconfig.module.build.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "jest --coverage",
    "test:cypress": "cypress run --component",
    "cy:open": "cypress open --component",
    "check-cli": "run-s test diff-integration-tests check-integration-tests",
    "check-integration-tests": "run-s check-integration-test:*",
    "diff-integration-tests": "mkdir -p diff && rm -rf diff/test && cp -r test diff/test && rm -rf diff/test/test-*/.git && cd diff && git init --quiet && git add -A && git commit --quiet --no-verify --allow-empty -m 'WIP' && echo '\\n\\nCommitted most recent integration test output in the \"diff\" directory. Review the changes with \"cd diff && git diff HEAD\" or your preferred git diff viewer.'",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "jest --watchAll",
    "cov": "run-s build test:unit && open-cli coverage/index.html",
    "cov:send": "run-s test:unit && codecov",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude \"**/*+(spec|test|stories).+(ts|tsx)\" --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && npm i",
    "prepare-release": "run-s reset-hard test doc:html version doc:publish",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "build-storybook": "build-storybook",
    "spellcheck": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "commit": "git-cz",
    "bump": "standard-version",
    "release": "git push --follow-tags origin main",
    "extract-changelog": "extract-changelog-release"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-flow": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@cypress/code-coverage": "^3.10.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-docs": "^6.5.13",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-webpack5": "^6.5.13",
    "@storybook/jest": "^0.0.10",
    "@storybook/manager-webpack5": "^6.5.13",
    "@storybook/react": "^6.5.13",
    "@storybook/react-docgen-typescript-plugin": "^1.0.2-canary.6.9d540b91e815f8fc2f8829189deb00553559ff63.0",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.1",
    "@types/color-convert": "^2.0.0",
    "@types/jest": "^28.1.6",
    "@types/react": "^18.0.15",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "@typescript-eslint/typescript-estree": "^5.30.4",
    "@vitejs/plugin-react": "^2.0.1",
    "babel-loader": "^8.2.5",
    "codecov": "^3.5.0",
    "cspell": "^4.1.0",
    "cypress": "^12.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-storybook": "^0.6.4",
    "eslint-plugin-testing-library": "^5.5.1",
    "extract-changelog-release": "^1.0.2",
    "gh-pages": "^3.1.0",
    "git-cz": "^4.9.0",
    "got": "^12.1.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.2",
    "minimist": "^1.2.6",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^7.0.1",
    "prettier": "^2.1.1",
    "react": "^18.2.0",
    "react-docgen": "^5.4.3",
    "react-docgen-typescript": "^2.2.2",
    "react-dom": "^18.2.0",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "storybook-addon-react-docgen": "^1.2.42",
    "styled-components": "^5.3.5",
    "styled-icons": "^10.45.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^9.1.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.1.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typedoc": "^0.23.10",
    "typescript": "^4.0.2",
    "vite": "^3.0.9",
    "webpack": "^5.74.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.stories.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/build/",
      "<rootDir>/src/lib/Utils/test.ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage/jest",
    "testEnvironment": "jest-environment-jsdom",
    "coverageReporters": [
      "clover",
      "json",
      "lcov",
      "text-summary",
      "html",
      "cobertura"
    ],
    "moduleNameMapper": {
      "^@lib/(.*)": "<rootDir>/src/lib/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.ts"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": []
  },
  "dependencies": {
    "@floating-ui/react-dom": "^1.0.0",
    "@floating-ui/react-dom-interactions": "^0.9.1",
    "@react-aria/ssr": "^3.3.0",
    "@react-spring/web": "^9.5.2",
    "@stitches/react": "^1.3.1-1",
    "@types/uuid": "^8.3.4",
    "clsx": "^1.2.1",
    "deepmerge": "^4.2.2",
    "polished": "^4.2.2",
    "uuid": "^8.3.2"
  }
}
